<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.java.ssm.mapper.SysCodeRuleMapper">
	
	<select id="getCodeByTabName" resultType="String" parameterType="String">
		SELECT currentCode FROM sys_code_rule  WHERE tabName = #{_parameter}
	</select>

	<select id="findSysCodeRules" resultType="java.util.HashMap" parameterType="String">
		SELECT * FROM sys_code_rule  WHERE tabName = #{_parameter}
	</select>
	
	<update id="updateSysCodeRule" parameterType="java.util.HashMap">
		UPDATE sys_code_rule SET available='${available}',nextseq='${nextseq}',curDate='${curDate}' where id = #{id}
	</update>

</mapper>